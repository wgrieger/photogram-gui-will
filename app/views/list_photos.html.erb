  <li><a href="/photos"> Photos </a></li>
</ul>

<h1> List of Photos </h1>

<form method="post" action="/photos/new_photo">
  <label id="Image">Image</label>
  <input id="Image" name="imagesrc" type="text" placeholder="Enter a URL for the image...">

  <label id="Caption">Caption</label>
  <textarea id="Caption" name="caption" type="text" placeholder="Enter a caption for the photo..."></textarea>

  <label id="owner">Owner ID</label>
  <input id="owner" name="owner" type="integer" placeholder="Enter an ID of a User">

  <button> Add photo </button>

</form>

<hr>

<!--start table here-->

<table border="1px">
  <tbody>
    <tr>
      <th> Image </th>
      <th> Caption </th>
      <th>Owner</th>
      <th>Posted</th>
      <th></th>
    </tr>

   <%@photos_all.each do |photo|%>
   <tr>

    <td>
      <img src="<%=photo.image%>">
    </td>

    <td>
      <%=photo.caption%>
    </td>

    <td>
      <%=User.where(:id=>photo.owner_id).first.username%>
    </td>

    <td>
      <%=photo.created_at%>
    <td>
    <a href="/photos/<%=photo.id%>"> Show details </a>
    </td>

    </tr>
    <%end%>
  </tbody>
 </table>
